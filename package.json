{
	"name": "vpy",
	"displayName": "Versioned python programs",
	"description": "Extension for versioned python programs",
	"version": "0.0.1",
	"publisher": "fonzo",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:python"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "version-explorer",
					"title": "Version Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"version-explorer": [
				{
					"id": "nodeDependencies",
					"name": "Node Dependencies",
					"icon": "media/dep.svg",
					"contextualTitle": "Package Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "nodeDependencies.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "nodeDependencies.addEntry",
				"title": "Add"
			},
			{
				"command": "nodeDependencies.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "nodeDependencies.slice",
				"title": "Project slice",
				"icon": "$(output)"
			},
			{
				"command": "nodeDependencies.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "nodeDependencies.newReplace",
				"title": "Create replacement version..."
			},
			{
				"command": "nodeDependencies.newUpgrade",
				"title": "Create upgrade version..."
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "nodeDependencies.refreshEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.addEntry",
					"when": "view == nodeDependencies"
				}
			],
			"view/item/context": [
				{
					"command": "nodeDependencies.slice",
					"when": "view == nodeDependencies && viewItem == version",
					"group": "inline"
				},
				{
					"command": "nodeDependencies.editEntry",
					"when": "view == nodeDependencies && viewItem == version",
					"group": "inline"
				},
				{
					"command": "nodeDependencies.newReplace",
					"when": "view == nodeDependencies && viewItem == version"
				},
				{
					"command": "nodeDependencies.newUpgrade",
					"when": "view == nodeDependencies && viewItem == version"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint \"src/**/*.ts\""
	},
	"devDependencies": {
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}